{
  "manifest_version": 3,
  "name": "Tailwind CSS Detector",
  "version": "1.1",
  "description": "Detect if a website is using Tailwind CSS.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tailwind CSS Detector",
    "default_icon": {
      "16": "icon-gray.png",
      "48": "icon-gray.png",
      "128": "icon-gray.png"
    }
  }
}